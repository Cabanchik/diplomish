      xmlns:local="clr-namespace:diplomish.admFiles"
      mc:Ignorable="d" 
      Height="406.56" Width="538.369" Background="#9ceaef">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="addEmployee_Click" HorizontalAlignment="Left" Width="198" Height="50" BorderThickness="3" BorderBrush="Black" Content="Добавить сотрудника" Margin="0,0,0,5" FontSize="20">
