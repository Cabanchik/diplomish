<Page x:Class="diplomish.myTasks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplomish"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="myTasks">

    <Grid Background="#9ceaef">
        <!--<WrapPanel Orientation="Horizontal">-->
        <ListView Height="150" Width="150">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="PIZDA"></Label>
                        <ListView Background="Wheat" Height="90" Width="90" x:Name="list1111">
                            <ListView.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                    <Setter Property="BorderThickness" Value="3"/>
                                </Style>

                            </ListView.Resources>
                            <StackPanel Orientation="Vertical">
                                <Label Content="sasun" Width="82" FontSize="12" Margin="0,0,0,0">
                                    <Label.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="10"/>
                                            <Setter Property="BorderThickness" Value="3"/>
                                        </Style>

                                    </Label.Resources>
                                    <Label.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF7E5D4E" Offset="0"/>
                                            <GradientStop Color="#FF4A4027" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Label.Background>
                                </Label>
                            </StackPanel>
                        </ListView>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
           
        </ListView>
        <!--</WrapPanel>-->
    </Grid>
</Page>
