<Page x:Class="diplomish.SelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:diplomish"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectionPage">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Grid HorizontalAlignment="Left" Width="400" Background="#9ceaef">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Пизда"/>
                    <Button x:Name="entry" Click="entry_Click" Content="Войти"></Button>
                </StackPanel>
            </Grid>
            <Grid HorizontalAlignment="Left" Width="400" Background="#FFF1BD">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="NIGger"></Label>
                    <Button Content="Войти"></Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
    
</Page>
